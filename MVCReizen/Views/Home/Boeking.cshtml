@model ReisKlantEnNieuweReisForm;
@using MVCReizen.Models;
@using MVCReizen.Controllers;
@using MVCReizen.ModelView;
@{
    ViewData["Title"] = "Boeking";
}

<h1>Reis</h1>
<h3>Bestemming</h3>
<h2>@Model.Reis.BestemmingscodeNavigation.Plaats</h2>
<h3>Vertrek</h3>
<h2>@Model.Reis.Vertrek</h2>
<h3>Aantal Dagen</h3>
<h2>@Model.Reis.AantalDagen</h2>
<h3>Prijs per persosn</h3>
<h2>@Model.Reis.PrijsPerPersoon</h2>
<h1>Klant</h1>

<h3>@Model.Klant.Voornaam @Model.Klant.Familienaam</h3>
<h3>@Model.Klant.Adres</h3>
<h3>@Model.Klant.Woonplaats.Postcode @Model.Klant.Woonplaats.Naam</h3>


<h1>Boeking</h1>
<form method="post" asp-action="KlarBoeking" asp-controller="home">
    <div>
        <div>
            <label asp-for="@Model.NieuweReisForm.AantalVolwassenen">Aantal vowassen</label>
            <span asp-validation-for="@Model.NieuweReisForm.AantalVolwassenen"></span>
            <input type="number" id="volwassen" name="volwassen" value="@Model.NieuweReisForm.AantalVolwassenen" required>            
        </div>
        <div>
            <label asp-for="@Model.NieuweReisForm.AantalKinderen">Aantal kinderen</label>
            <span asp-validation-for="@Model.NieuweReisForm.AantalKinderen"></span>
            <input type="number" id="kinderen"  value="@Model.NieuweReisForm.AantalKinderen" name="kinderen">
        </div>
        <div>
            <label for="Boeking">@Model.NieuweReisForm.AnnulatieVerzekering</label>
            <input type="checkbox" id="verzekering" name="verzekering">
            <input type="hidden" name="reisId" value="@Model.Reis.Id" />
            <input type="hidden" name="klantId" value="@Model.Klant.Id" />          
            <button type="submit">Boeken</button>

        </div>  
        <div asp-validation-summary="All"></div>
    </div>
</form>


